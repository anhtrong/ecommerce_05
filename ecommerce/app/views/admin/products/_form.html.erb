<%= simple_form_for [:admin, @product] do |f| %>
  <%= f.select :category_id, Category.all.collect {|c| [ c.name, c.id ]},
    include_blank: t("select_category"), class: "form-control" %>
  <%= f.input :name, class: "form-control" %>
  <%= f.input :description, class: "form-control" %>
  <%= f.input :price, class: "form-control" %>
  <%= f.input :image, class: "form-control" %>
  <%= f.button :submit, t(".save"), class: "btn btn-submit" %>
<% end %>
